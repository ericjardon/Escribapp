<%- include('includes/header') %>

<div class="container py-md-5 container--narrow">
  <%- include('includes/flash')%>
  <%- include('includes/profileTabs')%>
  
    <div class="list-group">
      <% postsByAuthor.forEach(function(post) { %>
        <a href="/post/<%= post._id %>" class="list-group-item list-group-item-action">
          <img class="avatar-tiny" src="<%= post.author.avatar %>">
          <strong><%= post.title %></strong> on <%= post.creationDate.getMonth()+1%>/<%= post.creationDate.getDate()%>/<%=post.creationDate.getFullYear()%>
        </a>
        <%
      })%>
    </div>
  </div>

<%- include('includes/footer') %>